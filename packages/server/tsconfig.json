{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@libs/*": ["./src/libs/*"],
      "@app/*": ["./src/app/*"],
      "@router/*": ["./src/router/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
